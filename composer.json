{
    "name": "cultuurnet/publiq-platform",
    "type": "project",
    "description": "Publiq platform",
    "license": "MIT",
    "require": {
        "php": "^8.2.0",
        "ext-simplexml": "*",
        "auth0/login": "^7.2",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/oauth-subscriber": "^0.6",
        "inertiajs/inertia-laravel": "^0.6.3",
        "laravel/framework": "^9.19",
        "laravel/horizon": "^5.10",
        "laravel/nova": "^4.0",
        "laravel/tinker": "^2.7",
        "publiq/client-credentials": "*",
        "publiq/insightly-link": "*",
        "sentry/sentry-laravel": "^3.1",
        "spatie/laravel-activitylog": "^4.7"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.16",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.0",
        "phpunit/phpunit": "^9.5.10",
        "publiq/php-cs-fixer-config": "^2.0",
        "spatie/laravel-ignition": "^1.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        },
        {
            "type": "path",
            "url": "./nova-components/ClientCredentials"
        },
        {
            "type": "path",
            "url": "./nova-components/InsightlyLink"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix",
        "test": "php artisan test",
        "stan": "vendor/bin/phpstan analyse",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan horizon:publish --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
